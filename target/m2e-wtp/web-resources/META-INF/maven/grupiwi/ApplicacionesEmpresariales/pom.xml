	  <!-- ========== CONFIGURACION DEL PLUGIN SQL ========== -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>sql-maven-plugin</artifactId>
        <version>1.5</version>

        <dependencies>
          <dependency>
            <groupId>postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>9.1-901.jdbc4</version>
          </dependency>
        </dependencies>

        <configuration>
          <driver>org.postgresql.Driver</driver>
          <url>jdbc:postgresql://plop.inf.udec.cl:5432/is2014</url><!-- para conectarsea atenea -->
          <username>inostroza</username>
          <password>is2014</password>
          <autocommit>true</autocommit>
        </configuration>

		<executions>
        	
        	<execution>
            	<id>default-cli</id>
            	<goals>
             		<goal>execute</goal>
            	</goals>
            	<configuration>
              		<srcFiles>
                		<srcFile>src/sql/create-schema.sql</srcFile>
                		<srcFile>src/sql/test-data.sql</srcFile>
              		</srcFiles>
            	</configuration>
          	</execution>
          	
        </executions>
      
